{% extends 'base.jinja2' %}

{% block dependencies %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/home.css') }}">
{% endblock %}

{% block content %}

<div class="home">
	<div class="jumbotron">
		<h1>{{ localise('title') }}</h1>
		<div class="body">
			<p>{{ localise('site-description') }}</p>
		</div>
		<div class="buttons">
			<div class="flexible-space"></div>
			<a class="button button-secondary" href="{{ url_for('login') }}">{{ localise('site-log_in') }}</a>
			<a class="button button-primary" href="{{ url_for('register') }}">{{ localise('site-sign_up') }}</a>
		</div>
	</div>
</div>

{% endblock %}